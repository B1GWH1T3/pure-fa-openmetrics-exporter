package config

type FlashArray struct {
        Name          string    `yaml:"name"`
        ApiToken      string    `yaml:"api_token"`
}

type FlashArrayList struct {
        FlashArrays     []FlashArray    `yaml:"flasharrays"`
}

func (f *FlashArrayList) GetApiToken(name string) string {
        for _, a := range f.FlashArrays {
                if a.Name == name {
                        return a.ApiToken
                }
        }
        return ""
}
